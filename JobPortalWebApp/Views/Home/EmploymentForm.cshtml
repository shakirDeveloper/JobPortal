    // Handle click event on Add button
    function addEmployment() {
        employmentIndex = employmentIndex + 1;
        var html2Add = '<h4>Please enter Employment History ' + (employmentIndex+1) + ' detail: </h4> <div class="form-group mx-sm-3 mb-2">' +
            '<label for="emphistorydto[' + employmentIndex + '].organisation">Organisation</label>' +
            '<input type="text" class="form-control" id="employmentHistories[' + employmentIndex + '].organisationName" name="employmentHistories[' + employmentIndex + '].organisationName" placeholder="Organisation">' +
